<div class="container">
  <div class=row>
    <div class="mx-auto">
      <h1>ログイン</h1>
      <div>
        <%= form_with model: @user,url: user_session_path do |f| %>
          <div class="field">
            <%= f.label :name,"ユーザーネーム" %><br/>
            <%= f.text_field :name %> 
          </div>
     
          <div class="field">
            <%= f.label :email,"メールアドレス" %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password,"パスワード" %><br/>
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
         
          <div class="actions">
            <%= f.submit "ログイン" %>
          </div>
        <% end %>
        <p>新規登録は<%= link_to "こちら",new_user_registration_path %>から</p>
      </div>
    </div>
  </div>
</div>
